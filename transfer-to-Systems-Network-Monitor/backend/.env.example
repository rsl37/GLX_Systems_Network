# Application
NODE_ENV=development
PORT=3000
APP_NAME=GLX Systems Network Monitoring Platform

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/glx_systems
DB_HOST=localhost
DB_PORT=5432
DB_NAME=glx_systems
DB_USER=username
DB_PASSWORD=password
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# JWT Authentication (MUST CHANGE IN PRODUCTION)
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_AT_LEAST_64_CHARACTERS_LONG
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Blockchain
BLOCKCHAIN_ENABLED=true
BLOCKCHAIN_CONSENSUS_THRESHOLD=0.51
BLOCKCHAIN_DIFFICULTY=4

# Post-Quantum Cryptography
PQC_ENABLED=true
PQC_KEY_ROTATION_DAYS=90

# Logging
LOG_LEVEL=info
LOG_DIR=./logs
LOG_MAX_FILES=14d
LOG_MAX_SIZE=20m

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true

# MCP Servers
MCP_REALTIME_PORT=3003
MCP_CIVIC_PORT=3004
MCP_AUTH_PORT=3005
MCP_SOCIAL_PORT=3006
